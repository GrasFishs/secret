@import "../../style/icon.wxss";
.container {
  display: flex;
  height: 100vh;
  flex-direction: column;
}

.input {
  box-sizing: border-box;
  height: 200px;
  width: 100%;
  transition: 0.2s;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input .content {
  text-align: center;
  color: #fff;
  font-size: 16px;
}

.colors-container {
  flex: 1;
  background: black;
  padding: 10px;
}

.colors {
  display: flex;
  flex-wrap: wrap;
}

.color {
  width: 50px;
  height: 50px;
  margin: 10px;
  border-radius: 50%;
}

.float{
  position: fixed;
  right: 20px;
  bottom: 20px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: #e91e63;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2px 2px #333;
}